{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "vectora",
  "patterns": [
    {
      "name": "entity.name.tag.vec",
      "match": "^[a-zA-Z][a-zA-Z0-9_-]*(?=\\s*\\{)"
    },
    {
      "name": "entity.other.attribute-name.class.vec",
      "match": "\\.[a-zA-Z_][\\w-]*(?=\\s*\\{)"
    },
    {
      "name": "entity.other.attribute-name.id.vec",
      "match": "#[a-zA-Z_][\\w-]*(?=\\s*\\{)"
    },
    {
      "name": "entity.other.attribute-name.async.vec",
      "match": "@[a-zA-Z_][\\w-]*(?=\\s*\\{)"
    },
    {
      "name": "keyword.control.event.vec",
      "match": "\\b(root|stem|media|import|charset|layer|window.onLoad|DOMContent.onLoad|reveal.onScroll|hide.onScroll|onSing.click|onDbl.click|onHold.click)\\b"
    },
    {
      "name": "support.constant.property-name.vec",
      "match": "\\b(color|background-color|text|message|radius|gap|weight|brightness|request|value)\\b\\:"
    }, 
    {
      "name": "support.function.animation.vec",
      "match": "\\b(fadeIn|fadeOut|slideIn|slideOut|fall|rise||pop|implode|shake|create|shiver|fadeColor|chameleonCamo|octopusCamo|paint|suddenChange|bloomGap|stagedGapColumn|stagedGapRow|skinny|heavy|callBack|callDismiss)\\b\\("
    },
    {
      "name": "comment.line.double-slash.vec",
      "match": "//.*$"
    },
    {
      "name": "comment.block.vec",
      "begin": "/\\*",
      "end": "\\*/"
    }
  ],
  "scopeName": "source.vec"
}
