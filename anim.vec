h1 {
    DOMContent.onLoad {
        text: slideIn() ++ slideOut();
        // não houve um delay de 1s entre o slideIn e slideOut!!!!!
        color: fadeColor(#f00, #000, 600ms);
    };
}

// Usando "div > div" para selecionar apenas a div filha de outra div
// Evita seleção múltipla e repeição de animações
.parent {
    DOMContent.onLoad {
        text: land();
    };
}

#child {
    DOMContent.onLoad {
        radius: round();
    };
}