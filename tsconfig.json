{
  "compilerOptions": {
    // Diretórios
    "rootDirs": ["src"],
    "outDir": "dist",

    // Modo estrito
    "strict": true,

    // Target moderno
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",

    // Interop com Node e libs modernas
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Geração de mapas e declarações
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Checagens úteis
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Evita problemas com imports "sujos"
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowImportingTsExtensions": false
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
